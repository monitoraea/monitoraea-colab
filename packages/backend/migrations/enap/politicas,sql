ALTER TABLE ppea.politicas ADD instituicao_enquadramento_old int2 NULL;

update ppea.politicas set instituicao_enquadramento_old = instituicao_enquadramento
where true;

update ppea.politicas set instituicao_enquadramento = -1 where id in (
	select id
	from ppea.politicas
	where instituicao_enquadramento not in (0,1,2) or instituicao_enquadramento is null
)